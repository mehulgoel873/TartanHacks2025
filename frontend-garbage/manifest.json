{
  "manifest_version": 3,
  "name": "lighthouse",
  "version": "1.0",
  "description": "Let the light guide you.",
  "permissions": [
    "desktopCapture",
    "tabs",
    "downloads",
    "alarms",
    "storage",
    "offscreen",
    "notifications"
  ],
  "icons": {
    "16": "lighthouse-16.png",
    "48": "lighthouse-64.png",
    "64": "lighthouse-64.png",
    "128": "lighthouse-128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "lighthouse-16.png",
      "48": "lighthouse-64.png",
      "64": "lighthouse-64.png",
      "128": "lighthouse-128.png"
    }
  }
}