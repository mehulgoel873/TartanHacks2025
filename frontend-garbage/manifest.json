{
    "manifest_version": 3,
    "name": "Modular Screen Capture",
    "version": "1.0",
    "description": "Capture the screen and process the image.",
    "permissions": ["desktopCapture", "storage", "activeTab", "downloads"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    }
  }
